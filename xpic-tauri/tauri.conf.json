{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "Xpic",
  "version": "0.3.0",
  "identifier": "xpic",
  "build": {
    "beforeBuildCommand": "task build-web",
    "beforeDevCommand": "task dev-web",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../xpic-web/dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Xpic",
        "width": 1184,
        "height": 700,
        "transparent": true,
        "center": true,
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$LOCALDATA/Xpic/.cache/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": [
          "en-US",
          "zh-CN"
        ]
      }
    }
  }
}
